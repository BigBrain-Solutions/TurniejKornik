@model TournamentSettings

@{
    ViewBag.Title = "Change Date";
    Layout = "_Layout";

    var settings = ViewData["Settings"] as TournamentSettings;
}

<div class="text-center">
    <h5></h5>
    
    <div>
        <form asp-action="ChangeDateConfirmed">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <label class="control-label">Data rozpoczęcia</label>
                <input asp-for="StartDate" class="form-control" type="datetime-local" value="@settings?.StartDate"/>
                <span asp-validation-for="StartDate" class="text-danger"></span>
                
                <label class="control-label">Data zakończenia</label>
                <input asp-for="EndDate" class="form-control" type="datetime-local" value="@settings?.EndDate"/>
                <span asp-validation-for="EndDate" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Zmień" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>