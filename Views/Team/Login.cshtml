@using KornikTournament.Enums
@using KornikTournament.Helpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginModel

@{
    ViewBag.Title = "Zaloguj się by zarządzać drużyną";
    Layout = "_Layout";
}

@{
    var type = ViewData["Error"] as ErrorTypes?;

    var error = ErrorHandler.HandleError(type);
}

<div class="text-center w-50" id="container">
    <h2>Zaloguj się by zarządzać drużyną</h2> <span>(Tylko dla leaderów drużyn)</span>

    <form asp-action="LoginConfirmed" method="post" autocomplete="off" class="mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            
            <label class="control-label">Summoner name</label>
            <input asp-for="Nickname" class="form-control"/>
            <span asp-validation-for="Nickname" Title="text-danger"></span>
            
            <label asp-for="Password" class="control-label">Hasło</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
            
            <p class="text-danger">@error</p>
        </div>
        <div class="form-group">
            <input type="submit" value="Zaloguj się" class="btn btn-primary" />
        </div>
    </form>
</div>

<style>
    #container {
        margin: 0 auto;
    }
</style>